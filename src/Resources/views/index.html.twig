{% extends 'layout.html.twig' %}

{% block content %}
    <div class="col-xs-12 page-container" ng-cloak>
        <div class="row">
            <div class="col-xs-4">
                <div class="row" ng-controller="friendController">
                    <ul class="list-group">
                        <li class="list-group-item" ng-repeat="f in friends">
                            {{ '{{ f.name }}'}}
                        </li>
                    </ul>
                    <form class="col-xs-9">
                        <input class="form-control"
                               type="text"
                               placeholder="Add a friends name"
                               ng-model="newFriend.name"/>
                    </form>
                    <button class="btn btn-sm btn-primary pull-right"
                            ng-click="addFriend()">
                        Add
                    </button>
                </div>
            </div>
            <div class="col-xs-8">
                <div ng-controller="statusController" class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <form class="col-xs-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-smile-o"></i></span>
                                    <input class="form-control"
                                           type="text"
                                           placeholder="Update your status"
                                           ng-model="status.input">
                                </div>
                            </form>
                            <button class="btn btn-sm btn-primary pull-right"
                                    ng-click="postStatus()">
                                Post
                            </button>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div ng-repeat="p in posts" class="post">

                            {{ '{{ p.status }}' }} @ {{ '{{  p.created_at | date:"short" }}' }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/app.js"></script>
    <script src="/js/controller/friendController.js"></script>
    <script src="/js/controller/statusController.js"></script>
{% endblock %}
